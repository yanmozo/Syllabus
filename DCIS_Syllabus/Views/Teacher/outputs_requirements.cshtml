
@{
    ViewBag.Title = "outputs_requirements";
    Layout = "~/Views/Shared/_SideBar.cshtml";
}

<h2>outputs_requirements</h2>


<style>
    table, th, td {
        border: 1px solid black;
    }

    td {
        text-align: center;
    }
</style>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

<form method="post" class="form-inline" action="../Chairman/AddDeli">

    <input type="text" class="form-control" name="code" placeholder="Output Name" required="required" />
    <textarea rows="4" cols="50" class="form-control" name="desc" placeholder="Description here..." required="required"></textarea>
    <select name="co">
        <option>1</option>
    </select>
    <select name="ass1" class="form-control">
        <option>Rubric-Based</option>
        <option>Non-Rubric-Based</option>
    </select>
    <select name="ass2" class="form-control">
        <option>Summative</option>
        <option>Formative</option>
    </select>

    <input type="submit" class="btn btn-success" value="Submit">
</form>























