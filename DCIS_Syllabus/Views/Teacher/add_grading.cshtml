
@{
    ViewBag.Title = "add_grading";
}

<h2>add_grading</h2>


<div class="container">
    <br />
    <p>Please place the necessary details: </p>
    <form method="post" action="insert_grading">
        <div class="form-group">
            <label>Requirements:</label>
            <input type="text" name="requirements" class="form-control" required>
        </div>
        <div class="form-group">
            <label>Type:</label>
            <input type="text" name="type" class="form-control" required>
        </div>
        <div class="form-group">
            <label>Weight:</label>
            <input type="text" name="weight" class="form-control" required>
        </div>

        <button type="submit" class="btn btn-danger" value="Save Changes">Back</button>
        <button type="submit" class="btn btn-success" value="Save Changes">Submit</button>
    </form>

</div>

