
@{
    ViewBag.Title = "LearningPlanUpdate";
    Layout = "~/Views/Shared/_SideBar.cshtml";
    var quarters = (List<Quarter>)(ViewData["QuarterList"]);
    var learningPlan = (Learning_Plan)(ViewData["DetailOfLearningPlan"]);
}
@*<div class="container">*@
<h2>
   Update Row from Learning Plan
</h2>

@*syllabusIdfk & courseIfDk is static*@
<form method="post" class="form-horizontal" action="LearningPlanUpdated?syllabusIdFK=1&&courseIdFK=1">
    <div class="form-group">
        <label class="control-label col-sm-2">Academic Term:</label>
        <div class="col-sm-10">
            <select class="form-control" id="academicTerm" name="academicTerm" required>
                @*@foreach (var quarter in quarters)
                {
                    if()
                    <option>@quarter.quarter_name</option>
                }*@
                @if(learningPlan.quarter_FK == 1)
                {
                    <option selected>Pre-Midterm</option>
                    <option>Midterm</option>
                    <option>Pre-Finals</option>
                    <option>Finals</option>
                }else if(learningPlan.quarter_FK == 2)
                {
                    <option>Pre-Midterm</option>
                    <option selected>Midterm</option>
                    <option>Pre-Finals</option>
                    <option>Finals</option>
                }else if(learningPlan.quarter_FK == 3)
                {
                    <option>Pre-Midterm</option>
                    <option>Midterm</option>
                    <option selected>Pre-Finals</option>
                    <option>Finals</option>
                }else if(learningPlan.quarter_FK == 4)
                {
                    <option>Pre-Midterm</option>
                    <option>Midterm</option>
                    <option>Pre-Finals</option>
                    <option selected>Finals</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Learning Outcome:</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="learningOutcome" placeholder="Learning Outcome" name="learningOutcome">@learningPlan.learningOutcomeDesc.Replace("<br />", System.Environment.NewLine)</textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">No. of Hours:</label>
        <div class="col-sm-10">
            <input type="number" value="@learningPlan.hours" class="form-control" id="noOfHrs" placeholder="No. of Hours" name="noOfHrs" required>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">CO Addressed:</label>
        @*Loop here the retrieved Course Outcome*@
        <div class="col-sm-1">
            <input type="checkbox" value="CO1" /> CO 1
        </div>
        <div class="col-sm-1">
            <input type="checkbox" value="CO2" /> CO 2
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Topics:</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="topics" placeholder="Topics" name="topics" required>@learningPlan.topics.Replace("<br />", System.Environment.NewLine)</textarea>
        </div>
    </div>
    <p style="font-size:1.2em;">Teaching-Learning Activities</p>
    <div class="form-group">
        <label class="control-label col-sm-2">Teacher Activity:</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="teacherAct" placeholder="Teacher Activity" name="teacherAct">@learningPlan.teacherActivity.Replace("<br />", System.Environment.NewLine)</textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Learner Activity:</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="learnAct" placeholder="Learner Activity" name="learnAct">@learningPlan.learnerActivity.Replace("<br />", System.Environment.NewLine)</textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Assessment Activities:</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="assessAct" placeholder="Assessment Activities" name="assessAct">@learningPlan.assessmentActivity.Replace("<br />", System.Environment.NewLine)</textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Update</button>
        </div>
    </div>
</form>
@*</div>*@

