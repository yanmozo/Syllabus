
@{
    ViewBag.Title = "LearningPlanAdd";
    Layout = "~/Views/Shared/_SideBar.cshtml";
    var quarters = (List<Quarter>)(ViewData["QuarterList"]);
}
<div class="container">
    <h2>
        <a href="LearningPlan">
            <button type="button" class=" btn btn-primary">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </button>
        </a>
        Add Row from Learning Plan
    </h2>
    <form class="form-horizontal" action="/action_page.php">
        <div class="form-group">
            <label class="control-label col-sm-2">Academic Term:</label>
            <div class="col-sm-10">
                <select class="form-control" id="academicTerm" name="academicTerm">
                    @foreach (var quarter in quarters)
                    {
                        <option>@quarter.quarter_name</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Learning Outcome:</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="learningOutcome" placeholder="Learning Outcome" name="learningOutcome"></textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">No. of Hours and Covered Date(s):</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="noOfHrs" placeholder="No. of Hours and Covered Date(s)" name="noOfHrs"></textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">CO Addressed:</label>
            @*Loop here the retrieved Course Outcome*@
            <div class="col-sm-1">
                <input type="checkbox" value="CO1" /> CO 1
            </div>
            <div class="col-sm-1">
                <input type="checkbox" value="CO2" /> CO 2
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Topics:</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="topics" placeholder="Topics" name="topics"></textarea>
            </div>
        </div>
        <p style="font-size:1.2em;">Teaching-Learning Activities</p>
        <div class="form-group">
            <label class="control-label col-sm-2">Teacher Activity:</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="teacherAct" placeholder="Teacher Activity" name="teacherAct"></textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Learner Activity:</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="learnAct" placeholder="Learner Activity" name="learnAct"></textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Assessment Activities:</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="assessAct" placeholder="Assessment Activities" name="assessAct"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </form>
</div>


