
@{
    ViewBag.Title = "UpdateCoreValue";
    Layout = "~/Views/Shared/_SideBar.cshtml";
    var cv_a = (Core_Value_Attribute)(ViewData["OneDetailCVA"]);
}


    <h2>Update Specific Attribute</h2>
    <form method="POST" action="UpdatedCoreValue?CoreValueAttrbId=@cv_a.coreValueAttrib_ID">
        <div class="form-group">
            <label>Core Value:</label>
            <select class="form-control" name="cvCoreValueU" required>
                @{
                    if (cv_a.coreValue_FK == 1)
                    {
                        <option selected>Scientia</option>
                        <option>Virtus</option>
                        <option>Devotio</option>
                    }
                    else if (cv_a.coreValue_FK == 5)
                    {
                        <option>Scientia</option>
                        <option selected>Virtus</option>
                        <option>Devotio</option>
                    }
                    else if (cv_a.coreValue_FK == 10)
                    {
                        <option>Scientia</option>
                        <option>Virtus</option>
                        <option selected>Devotio</option>
                    }
                }

            </select>
        </div>
        <div class="form-group">
            <label for="pwd">Attribute:</label>
            <textarea class="form-control" rows="5" name="cvCoreAttrbU" required>@cv_a.description.Replace("<br />", "\n")</textarea>
        </div>
        <button type="submit" class="btn btn-default">Update</button>
    </form>


