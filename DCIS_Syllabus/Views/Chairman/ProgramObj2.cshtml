
@{
    ViewBag.Title = "ProgramObj";
    Layout = "~/Views/Shared/_SideBar.cshtml";
    var details = (List<Core_Value>)ViewData["cores"];
    var proEdu = (List<Program_Educational_Objs>)ViewData["listOfProEdu"];
}
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>


<style>
   
</style>

<h2>Add Program Objectives</h2>


<form method="post" class="form-inline" action="../Chairman/ProgramEduObj">
    <div class="col-md-2">
        <label>Name</label>
        <input type="text" class="form-control" name="code" placeholder="Code" required="required" />
    </div>
    <div class="col-md-3">
        <label>Description</label>
        <textarea rows="4" cols="50" class="form-control" name="desc" placeholder="Description here..."></textarea>
    </div>
    <div class="col-md-3">
        <label>Core Values</label>
        <select name="status" class="form-control">
            @foreach (var names in details)
            {
                int count = 0;
                count++;
                <option>@names.name</option>
            }
        </select><br><br>
        <input type="submit" class="btn btn-success" value="Submit">
    </div>


</form>

<br>
<br>

<table id="myTable" class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Objectives</th>
            <th>Core Value</th>
            <th>Option</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var names in proEdu)
        {
            int count = 0;
            count++;
            <tr id="unique">
                <th>@names.codeName</th>
                <th>@names.objectives</th>
                @foreach (var styles in details)
                {

                    count++;
                    if (@names.coreValue_FK == styles.coreValue_ID)
                    {
                        <th>@styles.name</th>
                    }
                }
                <th id="unique2">
                    <a href="DeleteThings?ids=@names.programEduOutcome_ID">
                        <button type="button" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></button>
                    </a>
                    <a href="PassToUpdate?ids=@names.programEduOutcome_ID">
                        <button type="button" class="btn btn-warning"><span class="glyphicon glyphicon-pencil"></span></button>
                    </a>
                </th>

            </tr>
        }
    </tbody>
</table>











