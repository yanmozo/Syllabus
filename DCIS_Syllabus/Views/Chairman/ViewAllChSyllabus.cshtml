
@{
    ViewBag.Title = "ViewAllChSyllabus";
}


<div style="margin-top:5%;" class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <div class="row">
            <div class="col-md-7">
                <h3>List of all Syllabus</h3>
            </div>
            <div class="col-md-5">
                <div class="text-center">
                    <input type="text" class="form-control" id="searchSyllabusInput" onkeyup="myFunction()" placeholder="Search for course code..." title="Type in a Course Code">
                </div>
            </div>
        </div>
        <br />
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Course Code</th>
                    <th>Course Name</th>
                    <th class="text-center">Status</th>
                </tr>
            </thead>
            <tbody>
                @* Create a loop here for the list of all syllabus *@
                <tr class="clickable-row" data-href="ViewSyllabus" title="Click to view">
                    <td>IT5008</td>
                    <td>Platform Technologies</td>
                    <td class="text-center"><span class="label label-success">Ready to Print</span></td>
                </tr>
                <tr class="clickable-row" data-href="ViewSyllabus_Draft" title="Click to view">
                    <td>IT2101</td>
                    <td>Data Structures</td>
                    <td class="text-center"><span class="label label-warning">Revised</span></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-md-1"></div>
</div>